<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controlers.ControlerConfiguracao">
   <center>
      <VBox style="-fx-background-color: #73818C;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <MaterialIconView glyphName="SETTINGS" size="30" />
                  <Label text="Configurações" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ScrollPane fx:id="scrollpane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #73818C;" stylesheets="@/gui/styles/scrollpane.css">
               <content>
                  <VBox style="-fx-background-color: transparent;">
                     <children>
                        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #73818C;">
                           <children>
                              <JFXButton buttonType="RAISED" onAction="#sair" style="-fx-background-color: red;" text="Sair" textFill="WHITE">
                                 <graphic>
                                    <MaterialIconView fill="WHITE" glyphName="EXIT_TO_APP" size="20" />
                                 </graphic>
                              </JFXButton>
                           </children></VBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
